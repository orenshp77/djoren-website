                    <option value="other" style="background: #1a1a1a;">אחר</option>
                </select>
            </div>

            <div class="form-group">
                <label for="date">תאריך משוער</label>
                <input type="date" id="date" name="date" style="color-scheme: dark;">
            </div>

            <div class="form-group">
                <label for="message">ספרו לי על האירוע</label>
                <textarea id="message" name="message" placeholder="מתי, איפה, כמה אורחים, ומה חשוב לכם במיוחד..."></textarea>
            </div>

            <button type="submit" class="submit-btn">
                <i class="fas fa-paper-plane"></i>
                שלחו הודעה
            </button>

            <p style="text-align: center; margin-top: 20px; color: rgba(255,255,255,0.5); font-size: 14px;">
                * אחזור אליכם תוך 24 שעות
            </p>
        </form>
